<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_listview_item_hight"
        android:gravity="center" >

        <ImageView
            android:contentDescription="@string/app_name"
            android:id="@+id/common_listview_item_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/common_listview_item_margin_right_or_left"
            android:src="@null" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/common_listview_item_margin_left_icon"
            android:layout_weight="8"
            android:gravity="center_vertical"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/common_listview_item_top_text"
                style="@style/setting_listview_top_text"
                android:layout_width="wrap_content"
                android:textColor="@color/black_70_translate"
                android:layout_height="wrap_content" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/common_listview_info"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/common_listview_item_value"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textColor="@color/black_70_translate"
                android:layout_weight="2"
                android:gravity="end" />

            <ImageView
                android:contentDescription="@string/app_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/common_listview_item_margin_right_or_left"
                android:src="@drawable/icon_arrow" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/common_listview_switch"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:visibility="gone" >

            <CheckBox
                android:id="@+id/switch_snooze"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/common_listview_item_margin_right_or_left"
                android:button="@drawable/switch_selector"
                android:focusable="false" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>