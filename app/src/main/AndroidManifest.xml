<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.csr.csrmeshdemo"
    android:versionCode="1"
    android:versionName="1.2">

    <uses-sdk
        android:minSdkVersion="18"
        android:targetSdkVersion="19" />

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.MOUNT_UNMOUNT_FILESYSTEMS" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:name=".CsrMeshApplication"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".newUI.MainActivity"
            android:launchMode="singleTask"
            android:screenOrientation="portrait" />
        <activity
            android:name=".newUI.SmartAlarmEditActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".newUI.CoolplayRepeatActvity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".newUI.GradientActivity"
            android:screenOrientation="portrait" />

        <service
            android:name="com.csr.mesh.MeshService"
            android:enabled="true"
            android:exported="false" />

        <activity
            android:name=".newUI.AssociationActivity"
            android:launchMode="singleTask">
            >
        </activity>
        <activity android:name=".newUI.ShakeActivity" />
        <activity
            android:name=".newUI.SecuritySettingsActivity"
            android:launchMode="singleTask">
            >
        </activity>
        <activity android:name=".newUI.LauncherActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".newUI.GroupAssignActivity" />
    </application>

</manifest>